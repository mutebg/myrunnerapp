<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget 
  id="sd.myrunner" 
  version="0.0.1" 
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>MyRunner</name>
  <description>Runner</description>
  <author email="i@stoyandelev.com" href="http://stoyandelev.com">Stoyan Delev</author>
  <content src="index.html"/>
  <access origin="*"/>
  
  <preference name="phonegap-version" value="3.5.0" />
  <preference name="orientation" value="portrait" />
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="KeepRunning" value="true"/>
  <preference name="ErrorUrl" value="error.html"/>
  <preference name="SplashScreenDelay" value="1000" />
  <preference name="fullscreen" value="true" />

  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
  <gap:plugin name="org.apache.cordova.splashscreen" version="0.2.7" />

  <!-- iPhone / iPod Touch  -->
  <icon src="www/res/icon/ios/icon-60.png"        gap:platform="ios" width="60" height="60" />
  <icon src="www/res/icon/ios/icon-60@2x.png"     gap:platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="www/res/icon/ios/icon-76.png"        gap:platform="ios" width="76" height="76" />
  <icon src="www/res/icon/ios/icon-76@2x.png"     gap:platform="ios" width="152" height="152" />
  <!-- Settings Icon -->
  <icon src="www/res/icon/ios/icon-small.png"     gap:platform="ios" width="29" height="29" />
  <icon src="www/res/icon/ios/icon-small@2x.png"  gap:platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="www/res/icon/ios/icon-40.png"        gap:platform="ios" width="40" height="40" />
  <icon src="www/res/icon/ios/icon-40@2x.png"     gap:platform="ios" width="80" height="80" />
  <!-- Android -->
  <icon src="www/res/icon/android/ldpi.png"   gap:platform="android" gap:qualifier="ldpi" />
  <icon src="www/res/icon/android/mdpi.png"   gap:platform="android" gap:qualifier="mdpi" />
  <icon src="www/res/icon/android/hdpi.png"   gap:platform="android" gap:qualifier="hdpi" />
  <icon src="www/res/icon/android/xhdpi.png"  gap:platform="android" gap:qualifier="xhdpi" />
  <!--
  <icon src="www/res/icon/android/xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
  -->
  <!-- iPhone and iPod touch -->
  <gap:splash src="www/res/screens/ios/iphone-portrait.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="www/res/screens/ios/iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />
  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="www/res/screens/ios/portrait-568-2x.png" gap:platform="ios" width="640" height="1136" />
  <!-- iPad -->
  <gap:splash src="www/res/screens/ios/ipad-portrait.png" gap:platform="ios" width="768" height="1024" />
  <!-- Retina iPad -->
  <gap:splash src="www/res/screens/ios/ipad-portrait-2x.png" gap:platform="ios" width="1536" height="2048" />

  <gap:splash src="www/res/screens/android/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
  <gap:splash src="www/res/screens/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
  <gap:splash src="www/res/screens/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
  <gap:splash src="www/res/screens/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
  <!-- 
  <gap:splash src="www/res/screens/android/xhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" /> -->
</widget>